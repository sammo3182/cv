@article{HuPizzi2022,
  title = {The {{Role}} of {{Language Policy}} in {{Migration Decisions}}},
  author = {Hu, Yue and Pizzi, Elise},
  year = {2022},
  month = may,
  journal = {China: An International Journal},
  pages = {Accepted},
  abstract = {Why do migrants choose some destinations over others? This study explores the influence of language and language policy on migrant preferences. Governments can use language policies to help reduce communication barriers for migrants but mother tongue still signals identity differences. We argue that migrants prefer to move to regions where the difference in vernacular languages is smaller because of both communicative and cultural considerations. We examined these arguments with survey experiments and econometric analyses of national representative data from China. Our study finds that differences in native languages influence migration decisions, even when there is a widely-spoken common national language. The findings support our argument even after controlling for economic and institutional factors, and uncovers a non-linear effect of proficiency in the language promoted by government policy. The findings have far-reaching implications for understanding the migration decision-making process and the role of language policy in shaping national integration and population dynamics. A common national language can help migrants communicate and therefore remain in their migration destinations, but does not eliminate the role of mother tongue and local vernacular identity and integration. Even in a country where the government has promoted a single common language for six decades, local language diversity still matters.},
  timestamp = {2021-05-08T23:06:31Z}
}

@article{HuShao2021,
