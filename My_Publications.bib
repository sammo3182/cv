  language = {English},
  keywords = {adjusted matched-guise experiment,authority marker,China,language,Mandarin,political trust},
  timestamp = {2020-08-12T01:43:28Z},
  file = {D\:\\MEGAsync\\Nutstore\\01_Literature\\Hu_2020_Culture Marker Versus Authority Marker - How Do Language Attitudes Affect.pdf}
}

